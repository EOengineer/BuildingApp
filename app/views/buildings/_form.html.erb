<%= form_with(model: building, class: "mb-7") do |form| %>
  <div class="mb-5">
    <%= form.text_field :title, placeholder: "Add new building", class: "inline-block w-96 px-3 py-2 mt-2 shadow rounded-md border border-gray-200 outline-none" %>
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>